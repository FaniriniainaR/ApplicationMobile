<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Vue.Classe.AjouterClasse">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:text="Ajouter une nouvelle classe"
      android:textAlignment="center"
      android:textSize="20sp" />

  <EditText
      android:id="@+id/editTextClasse_ID"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:hint="Classe_ID"
      android:minHeight="48dp" />

  <EditText
      android:id="@+id/editTextClasseFiliere"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:hint="Filière"
      android:minHeight="48dp" />

  <EditText
      android:id="@+id/editTextNbrEtudiant"
      android:layout_width="match_parent"
      android:layout_height="58dp"
      android:layout_margin="8dp"
      android:ems="10"
      android:hint="Nombre d'étudiant"
      android:inputType="number" />

  <Button
      android:id="@+id/buttonAddClasse"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:text="Ajouter" />
</LinearLayout>